{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "baseUrl": ".",
    "paths": {
      "@fluexgl": [
        "../../../FluexGL/lib/src/index.ts"
      ],
      "@fluexgl/dsp": [
        "../../../FluexGL-DSP/lib/src/index.ts"
      ],
      "@server/typings": [
        "../server/typings.ts"
      ]
    },
    "types": [
      "@webgpu/types"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "../_dist/public",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*",
    "**/*.ts",
    "**/*.tsx",
    "../../../FluexGL/lib/src/**/*",
    "../../../FluexGL@Audio/lib/src/**/*",
  ],
  "exclude": [
    "_dist",
    "node_modules"
  ]
}