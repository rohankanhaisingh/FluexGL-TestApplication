{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@fluex-gl": [
        "../../../FluexGL/lib/src/index.ts"
      ],
    },
    "types": [
      "@webgpu/types"
    ],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "../_dist/public",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "../../../FluexGL/lib/src/**/*"
  ],
  "exclude": [
    "./_dist",
    "node_modules"
  ]
}